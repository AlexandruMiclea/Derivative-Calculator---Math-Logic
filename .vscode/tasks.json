{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build all cpp files",
            "command": "/usr/bin/g++",
            "args": [
                "-Wall",
                "-Wextra",
                "-std=c++23",
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/src/*.cpp",
                "-o",
                "${workspaceFolder}/main.o"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Multiple file build"
        }
    ],
    "version": "2.0.0"
}